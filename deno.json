{
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": ["./public/css/tailwind.css"]
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "no-window-prefix"]
    },
    "exclude": ["public/js/script.js"]
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ]
  },
  "importMap": "./import_map.json",
  "lock": false
}
